# Database (Railway provides this automatically via PostgreSQL plugin)
# DATABASE_URL=postgresql+asyncpg://user:password@host:5432/dbname

# Auth
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15

# Telegram
TELEGRAM_BOT_TOKEN=your-bot-token-here

# External API (api-football.com)
EXTERNAL_API_BASE_URL=https://v3.football.api-sports.io
EXTERNAL_API_KEY=your-api-key-here
EXTERNAL_API_SEASON=2025

# App mode
MODE=production

# Admin panel
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-admin-password-here

# CORS - frontend URL (use * for any origin, or comma-separated URLs)
FRONTEND_URL=*

# Redis/Celery (optional, currently unused)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_DB=0
# CELERY_BROKER_URL=redis://localhost:6379/0
# CELERY_RESULT_BACKEND=redis://localhost:6379/1
